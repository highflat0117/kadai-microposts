<% if current_user.bookmarking?(favorite_micropost) %>
  <%= form_for(current_user.favorites.find_by(micropost_id: favorite_micropost.id), html: {method: :delete}) do |f| %>
    <%= hidden_field_tag :micropost_id, favorite_micropost.id %>
    <%= f.submit 'Unbookmark', class: 'btn btn-danger btn-xs' %>
  <% end %>
<% else %>
  <%= form_for(current_user.favorites.build) do |f| %>
    <%= hidden_field_tag :micropost_id, favorite_micropost.id %>
    <%= f.submit 'Bookmark', class: 'btn btn-primary btn-xs' %>
  <% end %>
<% end %>
  